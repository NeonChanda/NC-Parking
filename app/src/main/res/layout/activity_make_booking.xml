<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:layout_height="match_parent"
    tools:context=".MakeBookingActivity">


    <!-- Elements stacked vertically -->
    <!-- Padding for spacing within the layout. black colour used for the text to ensure a sufficient contrast with the white background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!--  EditText: Slot Number Input -->
        <!-- Users enter the slot number they want to book -->

        <EditText
            android:id="@+id/editSlotNumber"
            android:layout_width="340dp"
            android:textColorHint="@color/black"
            android:layout_height="48dp"
            android:hint="Enter Slot Number" />

        <!--  EditText: N Number Input -->
        <!-- Users enter their university N number for identification -->

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:hint="Enter Your N Number"
            android:textColorHint="@color/black"/>

        <!--  EditText: Start Time Input -->
        <!-- Users specify when they want the booking to start -->

        <EditText
            android:id="@+id/editStartTime"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:textColorHint="@color/black"
            android:hint="Enter Start Time Between 9AM and 7PM" />

        <!--  EditText: End Time Input -->
        <!-- Users specify when the booking will end -->

        <EditText
            android:id="@+id/editEndTime"
            android:layout_width="340dp"
            android:textColorHint="@color/black"
            android:layout_height="48dp"
            android:hint="Enter End Time Between 9AM and 7PM" />

        <!--  EditText: Booking Date Input -->
        <!-- Users enter the date in a fixed format -->

        <EditText
            android:id="@+id/editBookingDate"
            android:layout_width="340dp"
            android:textColorHint="@color/black"
            android:layout_height="48dp"
            android:hint="Enter Date (e.g., 30th March 2025)" />

        <!-- Button: Book Slot -->
        <!-- Allows users to confirm their booking -->
        <!-- Calls bookingClicked method in Java file when clicked -->

        <Button
            android:id="@+id/btnBook"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/NTU"
            android:onClick="bookingClicked"
            android:text="Book Slot"
            android:textColor="@color/black" />

        <!--  Button: View Parking History -->
        <!-- Redirects users to their previous booking history -->

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/NTU"
            android:onClick="historyClicked"
            android:text="View Parking History"
            android:textColor="@color/black" />

        <!--  Button: Finish Current Booking -->
        <!-- Allows users to mark their booking as completed -->

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/NTU"
            android:onClick="finishClicked"
            android:text="Finish Current Booking"
            android:textColor="@color/black" />

        <!--  TextView: Booking Duration Information -->
        <!-- Displays important information about booking restrictions therefore red text has been used to indicate this-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="*Bookings are restricted to 1 hour per booking, if you are planning to stay for multiple hours please book multiple slots. Thank you.*"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <!-- TextView: Finish Booking Instructions -->
        <!-- Provides instructions on how to finish a booking -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="To finish your booking enter your N number again and press finish current booking."
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="63dp"
            app:srcCompat="@drawable/ntulogo" />


    </LinearLayout>

</RelativeLayout>